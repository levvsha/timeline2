body {
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  font-wight: 500;
  font-size: 12px;
  font-family: 'Noto Serif', serif;
}

path {
  stroke-width: 4;
  stroke-linecap: round;
  fill: none;
  transition: stroke-width .1s linear;
}

path.hidden-lines {
  stroke-width: 15;
  stroke: transparent;
  fill: none;
}

.annotation-line {
  stroke: black;
  stroke-opacity: 0.25;
  stroke-width: 1;
}

.chapter-label {
  font-size: 17px;
  letter-spacing: 3px;
  opacity: .4;
  transition: opacity .1s linear;
}

.name-label {
  font-size: 28px;
  opacity: 0.8;
  transition: opacity .1s linear;
}

.hidden-chapter-line {
  stroke: transparent
  stroke-width: 15;
}

.hovered-chapter {
  .chapter-label {
    opacity: 0.8
  }

  .chapter-line {
    stroke-width: 5;
    stroke-opacity: 0.6;
  }
}

.chapter-line {
  stroke: black;
  stroke-opacity: 0.25;
  stroke-width: 2;
  transition: all .1s linear;
}

.label-container.hovered {
  .name-label, .name-small-label  {
    opacity: 1;
    text-decoration: underline;
  }
}

.hovered-group path:not(.is-born) {
  stroke-width: 6;
}

.hidden-rect {
  fill: transparent
}

.name-small-label {
  font-size: 16px;
  opacity: 0.4;
  transition: opacity .1s linear;
}